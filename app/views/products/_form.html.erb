<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>


  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>



  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>


  <div class="field">
    <%= f.label :store_id %>
    <%= f.collection_select :store_id, Store.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.collection_check_boxes :store_ids, @stores, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box + b.label %>
        <%= text_field_tag "prices[#{b.value}]", type: 'number', placeholder: 'Price' %>
      </div>
    <% end %>
  </div>

  <%= f.collection_check_boxes :store_ids, @stores, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box + b.label %>
        <%= f.text_field :product_stores, "store_ids[#{b.value}]", type: 'number', placeholder: 'Price' %>
      </div>
  <% end %>
  
  

  


 



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
