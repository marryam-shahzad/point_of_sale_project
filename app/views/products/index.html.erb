<%= link_to "Stock", stocks_path %>
<h1>Products</h1>
<%= form_tag products_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search by name" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Store</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Actions</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.store.name %></td>
      <td><%= product.created_at %></td>
      <td><%= product.updated_at %></td>
      <td>
        <%= link_to "Show", product %>
        <%= link_to "Edit", edit_product_path(product) %>
        <%= form_for product, url: product_path(product), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' } do |f| %>
        <%= f.submit 'Delete' %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "New Product", new_product_path %>
